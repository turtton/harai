{
  "name": "basic",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build --mode client && vite build",
    "preview": "wrangler dev",
    "deploy": "bun run build && wrangler deploy",
    "deploy:staging": "bun run build && wrangler deploy --config wrangler.staging.jsonc",
    "deploy:production": "bun run build && wrangler deploy --config wrangler.production.jsonc",
    "lint": "bun run typecheck && biome lint .",
    "format": "biome format --write .",
    "check": "bun run typecheck && biome check --write .",
    "ci": "bun run typecheck && biome check .",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "typecheck": "tsc --noEmit"
  },
  "private": true,
  "dependencies": {
    "@hono/react-renderer": "^1.0.1",
    "@hono/zod-validator": "^0.7.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.1",
    "drizzle-orm": "^0.44.5",
    "hono": "^4.9.5",
    "honox": "^0.1.45",
    "lucide-react": "^0.542.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "tailwind-merge": "^3.3.1",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.2",
    "@cloudflare/workers-types": "^4.20250214.0",
    "@hono/vite-build": "^1.3.0",
    "@hono/vite-dev-server": "^0.18.2",
    "@mizchi/lsmcp": "^0.10.0",
    "@tailwindcss/vite": "^4.0.9",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.0.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "@typescript/native-preview": "^7.0.0-dev.20250830.1",
    "@vitest/coverage-v8": "^2.0.0",
    "@vitest/ui": "^2.0.0",
    "better-sqlite3": "^12.2.0",
    "drizzle-kit": "^0.31.4",
    "happy-dom": "^14.0.0",
    "shadcn": "^3.0.0",
    "tailwindcss": "^4.0.9",
    "tsx": "^4.20.5",
    "tw-animate-css": "^1.3.7",
    "typescript": "^5.4.0",
    "vite": "^6.3.5",
    "vitest": "^2.0.0",
    "wrangler": "^4.4.0"
  }
}
